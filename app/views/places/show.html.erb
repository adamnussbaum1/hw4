<h1><%= @place.name %></h1>

<h2>My Posts </h2>

<p>
  <a class="btn btn-success" href="/posts/new?place_id=<%= @place.id %>">New Post</a>
</p>

<div class="row">
<% if @current_user %>
<% for post in @place.posts.where( {user_id: @current_user.id}) %>
<div class="col-sm-4">
  <h3 class="display-4 mb-2"><%= post.title %></h3>
  <h4 class="display-8 mb-2"><%= post.posted_on %></h4>
  <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
  <% else %>
        <img src="<%= post.uploaded_image %>" class="img-fluid">
  <% end %> 
  <p class="display-16 mb-2"><%= post.description %></p>
</div>
<% end %>
</div>


<% end %>

<p>
  <a class="btn btn-dark" href="/places">Back to All Places</a>
</p>

